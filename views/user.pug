extends layouts/main

include mixins/mainVideo

block content
    .user
        header.user__profile
            .user__avatar
                if user.avatarUrl
                    div.user__avatar-image(style={'background-image':`url(${user.avatarUrl})`})
                else
                    div.user__avatar-image
            h3.user__name= user.name
            if canEdit
                a(href=routes.editProfile)
                    button ✏️ Edit Profile
                a(href=routes.updatePassword)
                    button 🔒 Change Password
        .user__uploaded-videos
            +mainVideo({
                id:1,
                thumbnail:"https://scontent-hkg3-1.xx.fbcdn.net/v/t1.0-9/45614006_2054343997955112_419649091144777728_n.jpg?_nc_cat=101&_nc_ht=scontent-hkg3-1.xx&oh=c302e79002cf8cc8f3ce118d83f41b5f&oe=5C8870BA",
                title:'Love this',
                views:40,
                timestamp:'Yesterday'
            })